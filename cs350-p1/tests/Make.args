# -*- makefile -*-

# Test names.
# Add each test case name, one per line, with a \ at the end
TESTS = $(addprefix tests/, \
	basic \
    	verbose \
	long_basic \
	small_o \
	mo_check \
	md_check \
	mh_check \
	vo_check \
	dv_check \
	dv_checklong \
	do_check \
	do_checklong \
	ov_longcheck \
	vdofile \
	vdnofile \
	vhbadfile \
	helpfile \
	helpoctal \
	helpoctalfile \
)

# Test case arguments
# For each test case you named above, you need an _ARGS line that specifies
# the command-line arguments to pass. For instance, if you were testing the
# "tar" program with tar xvfz myfile.tgz, the args would be xvfz myfile.tgz.
tests/basic_ARGS = ../small.data
tests/verbose_ARGS = -v ../small.data
tests/long_basic_ARGS = ../long.data
tests/small_o_ARGS = -o ../small.data
tests/mo_check_ARGS = -mo ../small.data
tests/md_check_ARGS = -md ../small.data
tests/mh_check_ARGS = -mh ../small.data
tests/vo_check_ARGS = -v -o ../small.data
tests/dv_check_ARGS = -dv ../small.data
tests/dv_checklong_ARGS = -dv ../long.data
tests/do_check_ARGS = -do ../small.data
tests/do_checklong_ARGS = -do ../long.data
tests/ov_longcheck_ARGS = -ov ../long.data
tests/vdofile_ARGS = -v -d -o ../small.data
tests/vdnofile_ARGS = -v -d -o ../small.data
tests/vhdbadfile_ARGS = -v -h -d
tests/helpfile_ARGS = -h ../small.data
tests/helpoctal_ARGS = -h -o
tests/helpoctalfile_ARGS = -h -o ../small.data
